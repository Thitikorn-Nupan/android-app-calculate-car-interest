<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/constraintMainInterestCar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="#616CA6"
        android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
            android:id="@+id/cardUserDetail"
            app:layout_constraintTop_toTopOf="@+id/constraintMainInterestCar"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20sp"
            android:layout_width="match_parent"
            android:layout_height="300sp"
            app:cardCornerRadius="30sp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">
            <!--
                set transparent(adj. โปร่งใส) background
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
            -->
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@id/constraintInsideCardUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:transitionName="@string/name_application"
                        android:padding="10sp"
                        android:layout_width="250sp"
                        android:layout_height="250sp"
                        android:id="@+id/imageIconUser"
                        app:layout_constraintTop_toTopOf="@+id/constraintInsideCardUser"
                        android:layout_marginTop="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp"/>
                <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="350dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40dp"
                        app:layout_constraintStart_toEndOf="@+id/imageIconUser"
                        app:layout_constraintTop_toTopOf="@+id/constraintInsideCardUser"
                        android:layout_marginTop="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginEnd="40dp"
                        app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                            android:textStyle="bold"
                            android:textColor="#C6221E1E"
                            android:padding="8sp"
                            android:textSize="45sp"
                            android:text="@string/say_hi_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/sayHiUser"/>
                    <TextView
                            android:textStyle="bold"
                            android:textColor="#C6221E1E"
                            android:padding="2sp"
                            android:textSize="25sp"
                            android:layout_margin="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textName"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/cardInput"
            app:cardCornerRadius="25sp"
            app:cardBackgroundColor="#576093"
            app:layout_constraintTop_toBottomOf="@+id/cardUserDetail"
            android:layout_width="match_parent"
            android:layout_height="520sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintMainInsideCardInput"
                android:layout_width="756dp"
                android:layout_height="497dp">
            <LinearLayout
                    app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInput"
                    android:id="@+id/layoutOfCarPrice"
                    android:padding="10sp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintMainInsideCardEdit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:textStyle="bold"
                            android:text="@string/auto_price"
                            android:padding="2sp"
                            android:textSize="60sp"
                            android:layout_margin="10sp"
                            android:layout_width="290sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textCarPrice"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardEdit"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/editTotalPrice"
                            app:layout_constraintBottom_toBottomOf="parent"
                    />
                    <EditText
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardEdit"
                            android:hint="@string/hint_auto_price"
                            android:textColor="#C6221E1E"
                            android:padding="2sp"
                            android:textSize="60sp"
                            android:inputType="numberDecimal"
                            android:layout_margin="10sp"
                            android:layout_width="290sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/editTotalPrice"
                            app:layout_constraintStart_toEndOf="@+id/textCarPrice"
                            app:layout_constraintEnd_toStartOf="@+id/textUnit"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardEdit"
                            android:text="@string/unit_thai"
                            android:textSize="60sp"
                            android:layout_margin="10sp"
                            android:layout_width="60sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textUnit"
                            app:layout_constraintStart_toEndOf="@+id/editTotalPrice"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layoutOfDownPayment"
                    android:padding="10sp"
                    app:layout_constraintTop_toBottomOf="@+id/layoutOfCarPrice"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintMainInsideCardInputOrder2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:textStyle="bold"
                            android:text="@string/down_payment"
                            android:padding="2sp"
                            android:textSize="60sp"
                            android:layout_margin="10sp"
                            android:layout_width="410sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textCarDownPayment"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInputOrder2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/editDownPayment"
                    />
                    <EditText
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInputOrder2"
                            android:hint="@string/hint_down_payment"
                            android:textColor="#C6221E1E"
                            android:padding="2sp"
                            android:textSize="60sp"
                            android:inputType="numberDecimal"
                            android:layout_margin="10sp"
                            android:layout_width="150sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/editDownPayment"
                            app:layout_constraintStart_toEndOf="@+id/textCarDownPayment"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.55"
                            app:layout_constraintEnd_toStartOf="@+id/textView"/>
                    <TextView
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInputOrder2"
                            android:text="@string/unit_thai"
                            android:textSize="60sp"
                            android:layout_margin="10sp"
                            android:layout_width="60sp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/editDownPayment"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/textView"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layoutOfInterestPerYear"
                    android:padding="10sp"
                    app:layout_constraintTop_toBottomOf="@+id/layoutOfDownPayment"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintMainInsideCardInputOrder3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:textStyle="bold"
                            android:text="@string/interest_per_year"
                            android:padding="2sp"
                            android:textSize="60sp"
                            android:layout_margin="10sp"
                            android:layout_width="465sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textCarInterestPerYear"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInputOrder3"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/editInterestPerYear"
                    />
                    <EditText
                            android:maxLength="4"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInputOrder3"
                            android:hint="@string/hint_interest_per_year"
                            android:textColor="#C6221E1E"
                            android:padding="2sp"
                            android:textSize="60sp"
                            android:inputType="numberDecimal"
                            android:layout_margin="10sp"
                            android:layout_width="120sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/editInterestPerYear"
                            app:layout_constraintStart_toEndOf="@+id/textCarInterestPerYear"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/textView2"/>
                    <TextView
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInputOrder3"
                            android:text="@string/unit_percent"
                            android:textSize="60sp"
                            android:layout_margin="10sp"
                            android:layout_width="70sp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/editInterestPerYear"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/textView2"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                    app:layout_constraintTop_toBottomOf="@+id/layoutOfInterestPerYear"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintMainInsideCardInputOrder4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:textStyle="bold"
                            android:text="@string/load_term"
                            android:padding="2sp"
                            android:textSize="60sp"
                            android:layout_margin="10sp"
                            android:layout_width="320sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textCarInstallment"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInputOrder4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/editInstallment"
                    />
                    <EditText
                            android:maxLength="1"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInputOrder4"
                            android:hint="@string/hint_load_term"
                            android:textColor="#C6221E1E"
                            android:padding="2sp"
                            android:textSize="70sp"
                            android:inputType="number"
                            android:layout_margin="10sp"
                            android:layout_width="50sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/editInstallment"
                            app:layout_constraintStart_toEndOf="@+id/textCarInstallment"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/textView3"
                    />
                    <TextView
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInputOrder4"
                            android:text="@string/unit_year"
                            android:textSize="70sp"
                            android:layout_margin="10sp"
                            android:layout_width="180sp"
                            android:layout_height="0sp"
                            app:layout_constraintStart_toEndOf="@+id/editInstallment"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/textView3"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layoutResultInterestCar"
            app:layout_constraintTop_toBottomOf="@+id/cardInput"
            android:layout_width="match_parent"
            android:layout_height="255sp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <androidx.appcompat.widget.AppCompatButton
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="@string/bt_interest_car"
                    android:layout_margin="10sp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_interest_car"
                    android:id="@+id/buttonInput"
                    android:layout_width="100sp"
                    android:layout_height="100sp"/>
        <LinearLayout
                android:paddingLeft="80sp"
                android:gravity="center"
                android:layout_margin="10sp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="5sp"
                    android:id="@+id/resultTextTotalLoan"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="5sp"
                    android:id="@+id/resultTextInterest"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="5sp"
                    android:id="@+id/resultTextTotalInterest"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="5sp"
                    android:id="@+id/resultTextTotalCost"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="5sp"
                    android:id="@+id/resultTextInstallmentPerMonth"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingHome"
            app:backgroundTint="#576093"
            android:src="@drawable/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutResultInterestCar"
            android:contentDescription="@string/name_application"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>